# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org
root = true

[*]
indent_size = 2
indent_style = space

; Unix-style newlines
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.md,*.slim}]
trim_trailing_whitespace = false

[*.py]
indent_size = 4
